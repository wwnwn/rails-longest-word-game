<h1>New Game!</h1>
<div class= "background">
<div class="flexbox">
<% @letters.each do |letter| %>
<div class="letterbox" >
  <p><%=  "#{letter.upcase}" %></p>
</div>
<% end %>
</div>
</div>
<h2>What's the longest word you can find?</h2>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Word">
  <input type="hidden" name="letters" value="<%= @letters.join(",").upcase %>">
  <input type="submit" value="Check word!" class="btn" color="blue" name="button">
</form>
